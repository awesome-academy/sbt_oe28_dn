<%= form_for @user, url: yield(:url), html: {class: "register-form"} do |f| %>
    <%= render "shared/error_messages", object: f.object  %>

    <%= f.email_field :email, placeholder: t("email") %>

    <%= f.text_field :full_name, placeholder: t("yourname") %>
    <%= f.submit yield(:button), class: "submit" %>
    <%= yield :message %>
<% end %>
