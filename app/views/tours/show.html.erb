<% provide :title, @tour.title %>
<div class="tour container">
  <div class="show-tour show-img request" >
    <h1><%= yield(:title) %></h1>
    <%= image_tag @tour.image.url %>
    <des><%= @tour.description %></des><hr/>
    <content><%= @tour.content %></content>
    <div><%= link_to new_tour_booking_path(@tour) do %>
      <button class="btn btn-primary btn-new-req"><%= t ".book" %>
      </button>
    <% end %>
    </div>
  </div>
  <p>
    <%= t (".avg_rate") %>
    <div class="average-tour-rating" data-score=<%= @average_rating %>></div>
  </p>
  <div>
    <% if @rating_check_exist.blank? %>
      <%= form_for [@tour, @tour.ratings.build] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div id="rating-form"><%= f.label t(".rate") %>: </div>
      <%= f.submit t(".submit"), class: "form-control" %>
      <% end %>
    <% else %>
      <%= render @tour.ratings %>
    <% end %>
  </div>
</div>
