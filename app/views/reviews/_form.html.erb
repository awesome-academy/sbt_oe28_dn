<%= form_for @review, url: url, html: {class: "form-horizontal"} do |f| %>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
      <legend><%= t "yourreview" %></legend>
      </div>
      <div class="form-group">
      <%= f.text_field :title, placeholder: t("form.title"), class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.text_area :description, placeholder: t("form.description"), class: "form-control", rows: 3 %>
      </div>
      <div class="form-group">
      <%= f.text_area :content, placeholder: t("form.content"), class: "form-control", rows: 12 %>
      </div>
      <div class="form-group">
      <%= f.select :category, options_for_select([[ t("nav.news"), 1],[ t("nav.place"), 2],[ t("nav.food"), 3]]), class: "form-control" %>
      </div>
      <div class="form-group custom-img">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
        <% if f.object.image? %>
          <%= image_tag f.object.image.url %>
        <% end %>
      </div>
      <div class="form-group">
      <% if f.object.persisted? %>
        <%= f.submit t("form.update"), class: "btn btn-primary" %>
      <% else  %>
        <%= f.submit t("form.submit"), class: "btn btn-primary" %>
      <% end %>

      </div>
  <% end %>
