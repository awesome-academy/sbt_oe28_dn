<%= provide :title, @review.title %>

<div class="container show-review">
  <h1 class="rv-title"> <%= @review.title %>
    <%= social_share_button_tag(@review.title, url: review_path(@review), desc: @review.title) %>
  </h1>
  <h4> <%= @review.user.full_name %> </h4>
  <br />
  <div><p class="rv-content"><%= raw @review.content %></p></div>
  <div class="panel panel-default panel-custom">
    <div class="panel-body" id="box-like">
      <% if @liked %>
        <%= render "unlike" %>
      <% else %>
        <%= render "like" %>
      <% end %>
    </div>
  </div>

  <div class="box-comment">
    <div id ="box-comment">
      <%= render "comments/form_comment", parent_id: Settings.parent_id_default %>
    </div>
    <div id="content-comment">
      <%= render partial: "comments/comment", collection: @comments_parent %>
    </div>
  </div>
</div>
