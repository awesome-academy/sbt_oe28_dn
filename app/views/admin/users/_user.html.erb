<tr>
  <td><%= user_counter + page_user + 1 %></td>
  <td><%= user.full_name %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td>
    <% if user.admin? %>
      <%= link_to user_admin_user_path(user), method: :patch do %>
        <button class="btn btn-warning"><%= t "user" %></button>
      <% end %>
    <% else %>
      <%= link_to admin_admin_user_path(user), method: :patch do %>
        <button class="btn btn-success"><%= t ".admin" %></button>
      <% end %>
    <% end %>
  </td>
  <td>
    <% if can? :destroy, user %>
      <% if user.user? %>
        <%= link_to t(".delete"), admin_user_path(user.id), method: :delete, data: { confirm: t("are_you_sure") } %>
      <% end %>
    <% end %>
  </td>
</tr>
