<tr>
  <td><%= ticket_counter +=1 %></td>
  <td><%= ticket.name %></td>
  <td><%= ticket.phone %></td>
  <td><%= number_to_currency(ticket.price) %></td>
  <td>
    <% if ticket.canceled? %>
      <div class="label label-danger"><%= t "canceled" %></div>
    <% elsif ticket.in_progress? %>
      <div class="label label-warning"><%= t "in_progress" %></div>
    <% else %>
      <div class="label label-success"><%= t "approved" %></div>
    <% end %>
  </td>
</tr>
