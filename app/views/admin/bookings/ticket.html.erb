<% provide :title, t("admin.bookings.index.title") %>
<div class="tour container">
  <h4><b> <%= yield :title %><hr/></b></h4>
  <% if @tickets.any? %>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th width="5%"><%= t("table.id") %></th>
          <th width="15%"><%= t("table.name") %></th>
          <th width="15%"><%= t("table.phone") %></th>
          <th width="20%%"><%= t("table.price") %></th>
          <th width="25%"><%= t("table.status") %></th>
        </tr>
      </thead>
      <tbody>
          <% @stt = Settings.paginate.bookings * (params[:page].to_i - 1) %>
          <%= render partial: "ticket", collection: @tickets %>
      </tbody>
    </table>
    <%= t ".revenue"%>: <%= @sum_ticket %>
    <div class="paginate">
        <%= will_paginate @tickets %>
    </div>
  <% else %>
    <i><%= t "msg.no_tickets" %></i>
  <% end %>
</div>
