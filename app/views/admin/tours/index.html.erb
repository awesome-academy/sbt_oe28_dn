<% provide :title, t("tours.index.title") %>
<div class="tour container tour-admin">
  <h4><b> <%= yield :title %><hr/></b></h4>
  <%= link_to new_admin_tour_path do %>
    <button class="btn btn-primary btn-add-new">
      <%= t("tours.index.create") %>
    </button>
  <% end %>
  <% if @tours.any? %>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th width="5%"><%= t("table.id") %></th>
          <th width="15%"><%= t("table.title") %></th>
          <th width="35%"><%= t("table.description") %></th>
          <th width="25%"><%= t("table.image") %></th>
          <th width="20%"><%= t("table.action") %></th>
        </tr>
      </thead>
      <tbody>
          <% @stt = Settings.paginate.tours * (params[:page].to_i - 1) %>
          <%= render partial: "tour", collection: @tours %>
      </tbody>
    </table>
    <div class="paginate">
        <%= will_paginate @tours %>
    </div>
  <% else %>
    <i><%= t "msg.no_tours" %></i>
  <% end %>
</div>
