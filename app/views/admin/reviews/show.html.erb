<%= provide :title, t(".title") %>
<div id="page-content-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 show-review">
        <h1 class="rv-title"> <%= @review.title %>
          <%= social_share_button_tag(@review.title, url: review_path(@review), desc: @review.title) %>
        </h1>
        <h4> <%= @review.user.full_name %> </h4>
        <br />
        <p class="rv-content"> <%= raw @review.content.html_safe %> </p>
        <div class="image-position">
          <button class="btn btn-primary"><%= t ".edit" %></button>
          <%= link_to t(".all_review"), admin_reviews_path %>
        </div>
      </div>
    </div>
  </div>
</div>
