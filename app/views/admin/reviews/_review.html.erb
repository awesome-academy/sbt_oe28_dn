<% if params[:page].nil? || params[:page] == "1" %>
  <% x = 0 %>
<% else %>
  <% page = params[:page].to_i - 1 %>
  <% x = page * Settings.paginate.reviews %>
<% end %>
<tr>
  <td><%= review_counter + x + 1 %></td>
  <td><%= review.title %></td>
  <td class="img-review"><%= image_tag review.image.url %></td>
  <td><%= review.description %></td>
  <td>
    <%= link_to t(".view"), admin_review_path(review.id) %>
    <%= link_to t(".delete"), admin_review_path(review.id), method: :delete, data: { confirm: t("are_you_sure") } %>
    <%= link_to t(".edit"), edit_admin_review_path(review.id) %>
  </td>
</tr>
