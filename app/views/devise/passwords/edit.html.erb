<% provide :title, t(".title") %>

<h2><%= t ".title" %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="devise-field">
    <%= f.label t("password") %><sub id="star" title= "<%= @minimum_password_length %> characters minimum"> * </sub>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: t(".new") %>
  </div>

  <div class="devise-field">
    <%= f.label t("confirm_password") %><sub id="star"> * </sub>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t("confirm") %>
  </div>

  <div class="actions">
    <%= f.submit t(".submit"), class: "submit" %>
  </div>
<% end %>

<center><%= render "devise/shared/links" %></center>
