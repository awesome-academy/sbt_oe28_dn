<%= search_form_for @q, class: "form-inline", id: "search-tour" do |f| %>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
      <%= f.label :title_cont, t("name_tour") %>
      <%= f.search_field :title_cont, class: "form-control tour-input" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-2">
      <%= f.label :price_gteq, t(".min_price") %>
      <%= f.number_field :price_gteq, class: "form-control tour-input" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-2">
      <%= f.label :price_lteq, t(".max_price") %>
      <%= f.number_field :price_lteq, class: "form-control tour-input" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
      <%= f.label :date_in_eq, t(".date_in") %>
      <%= f.datetime_field :date_in_eq, class: "form-control tour-input" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-2">
      <%= f.submit t(".search"), class: "form-control btn btn-success tour-input" %>
    </div>
  </div>
<% end %>
<br />
<%= t ".show_for" %>
<label> <%= sort_link(@q, :title, t("name_tour"), ) %> </label> &nbsp;&nbsp;&nbsp;
<label><%= sort_link(@q, :price, t(".price"))%> </label>&nbsp;&nbsp;&nbsp;
<label><%= sort_link(@q, :create_at, t(".newest"), default_order: :desc) %> </label>
